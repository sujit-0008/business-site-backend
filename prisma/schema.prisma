generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  SUPPLIER
  CUSTOMER 
}
model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  type      String   // e.g., "kyc", "product"
  supplierId Int
  productId Int?     // Optional, links to a specific product
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  supplier  Supplier @relation(fields: [supplierId], references: [id])
  product   Product? @relation(fields: [productId], references: [id])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  photo       String?
  description String?
  type        String?  // e.g., Electronics, Clothing
  category    String?  // e.g., Laptops, Shirts
  price       Float
  supplierId  Int
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  approved    Boolean  @default(false) // For admin approval
  notifications Notification[] // Opposite relation to Notification
}



model Supplier {
  id              Int       @id @default(autoincrement())
  ownerName       String
  ownerPhoto      String?
  email           String    @unique
  phone           String
  companyName     String
  address         String
  password        String
  companyPhotos   String[]
  kycBusinessReg  String?
  kycTaxId        String?
  kycAddressProof String?
  kycApproved     Boolean   @default(false)
  products        Product[]
  emailVerified   Boolean   @default(false)
  verificationToken String? @unique
  verificationTokenExpiry DateTime?
  notifications   Notification[]
  role            Role      @default(SUPPLIER) // Default to supplier
  resetPasswordToken    String?  
  resetPasswordExpiry   DateTime?
}


model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  address   String
  phone     String
  password  String
  role      Role     @default(CUSTOMER) // Use the existing Role enum
  resetPasswordToken    String?
  resetPasswordExpiry   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}